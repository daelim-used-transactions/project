<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daelim.transactions.mapper.DaoBuyBoard">

    <insert id="insertBoard"  parameterType="com.daelim.transactions.dto.BuyBoardDTO" useGeneratedKeys="true" keyProperty="boardIdx">
        insert into buylistboard(
        boardIdx,
        loginId,
        title,
        category,
        contents,
        deleteYn,
        insertTime,
        deleteTime,
        )values (
        #{boardIdx},
        #{loginId},
        #{title},
        #{category},
        #{contents},
        IFNULL(#{deleteYn}, 'N'),
        #{insertTime},
        #{deleteTime}
        )
    </insert>

    <select id="selectBoard" parameterType="com.daelim.transactions.dto.BuyBoardDTO">

    </select>

    <update id="updateBoard" parameterType="com.daelim.transactions.dto.BuyBoardDTO">

    </update>

    <delete id="deleteBoard" parameterType="com.daelim.transactions.dto.BuyBoardDTO">

    </delete>

    <select id="selectBoardTotalCount" parameterType="com.daelim.transactions.dto.BuyBoardDTO" resultType="int">
        SELECT
            COUNT(*)
        FROM
            buylistboard
        WHERE
            deleteYn = 'N'
    </select>


<!-- interface에서 list로 리턴값을 두고 mybatis에서 객채를 리턴하면 알아서 리스트 안으로 들어가게 되어있다함   -->
    <select id="selectBoardList"  parameterType="com.daelim.transactions.dto.BuyBoardDTO"  resultType="com.daelim.transactions.dto.BuyBoardDTO">
        SELECT
            boardIdx,
            loginId,
            title,
            category,
            contents,
            deleteYn,
            insertTime,
            deleteTime,
            views
        FROM
             buylistboard
        WHERE
            deleteYn = 'N'
        ORDER BY
            boardIdx DESC
    </select>

    <select id="selectBoardListById"  parameterType="String"  resultType="com.daelim.transactions.dto.BuyBoardDTO">
        SELECT
            boardIdx,
            loginId,
            title,
            contents,
            deleteYn,
            insertTime,
            deleteTime
        FROM
            buylistboard
        WHERE
            deleteYn = 'N'
        AND
            loginId = #{loginId}
        ORDER BY
            boardIdx DESC
    </select>

    <select id="selectBoardMemberCount" parameterType="String" resultType="int">
        SELECT
            COUNT(*)
        FROM
            buylistboard
        WHERE
            deleteYn = 'N'
        AND
            loginId = #{loginId}
    </select>

    <select id="selectBoardDetail" parameterType="long" resultType="com.daelim.transactions.dto.BuyBoardDTO">
        SELECT
            boardIdx,
            loginId,
            title,
            category,
            contents,
            deleteYn,
            insertTime,
            deleteTime,
            views
        FROM
            buylistboard
        WHERE
            deleteYn = 'N'
        AND
            boardIdx = #{idx}
    </select>

    <update id="updateBoardViews" parameterType="long">
        UPDATE
            buylistboard
        SET
            views = views +1
        WHERE
            deleteYn = 'N'
        AND
            boardIdx = #{idx}
    </update>

    <insert id="insertBuyLike"  parameterType="com.daelim.transactions.dto.BuyLikeDTO">
        insert into buylike(
        loginId,
        boardIdx
        )values (
        #{loginId},
        #{boardIdx}
        )
    </insert>

    <delete id="deleteBuyLike" parameterType="long">
        DELETE
        FROM
            buylike
        WHERE
            boardIdx = #{idx}
    </delete>

    <select id="selectBuyLike" parameterType="long" resultType="com.daelim.transactions.dto.BuyLikeDTO">
        SELECT
            loginId,
            boardIdx
        FROM
            buylike
        WHERE
            boardIdx = #{idx}
    </select>
</mapper>